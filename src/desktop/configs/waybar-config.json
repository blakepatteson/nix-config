{
  "layer": "top",
  "position": "top",
  "height": 30,
  "spacing": 4,
  "modules-left": ["disk", "network"],
  "modules-center": ["clock", "niri/window"],
  "modules-right": [
    "privacy",
    "mpris",
    "idle-inhibitor",
    "pulseaudio",
    "backlight",
    "battery",
    "temperature",
    "memory",
    "cpu",
    "systemd-failed-units",
    "tray"
  ],

  "disk": {
    "interval": 30,
    "format": "ğŸ’¾ {used}/{total} ({percentage_used}%)",
